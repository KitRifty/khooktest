{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "AMBuild",
            "command": "ambuild",
            "type": "shell",
            "args": [],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/third_party/gtest-parallel/gtest-parallel",
                "${workspaceFolder}/build/package/x86_64/testrunner"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": ["AMBuild"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        }
	]
}